<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.NewJoiningReport">

    <TextView
        android:id="@+id/tvTitleJoiningReport54"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunitosans_regular"
        android:gravity="center"
        android:text="New Joining Report"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_newjoining"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvTitleJoiningReport54"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/tv_no_newjoining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/nunitosans_regular"
        android:gravity="center"
        android:text="No Record Found"
        android:textColor="#000"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent" />

</RelativeLayout>