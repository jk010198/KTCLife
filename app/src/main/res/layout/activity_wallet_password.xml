<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunitosans_regular"
        android:gravity="center"
        android:text="Wallet Password"
        android:textColor="#000"
        android:textSize="26sp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_head"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp">

        <EditText
            android:id="@+id/et_pass_1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/clr_grey_text_transparent"
            android:focusable="true"
            android:fontFamily="@font/nunitosans_regular"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_pass_2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/clr_grey_text_transparent"
            android:focusable="true"
            android:fontFamily="@font/nunitosans_regular"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_pass_3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/clr_grey_text_transparent"
            android:focusable="true"
            android:fontFamily="@font/nunitosans_regular"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_pass_4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/clr_grey_text_transparent"
            android:focusable="true"
            android:fontFamily="@font/nunitosans_regular"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submitdata_enter_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ll"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/nunitosans_regular"
        android:onClick="method_trnbalance"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/btn_submitdata_enter_pass" />

</RelativeLayout>